<div class="panel panel-default" data-id="{{id}}">
  <div class="panel-heading ui-sortable-handle">
    <h4 class="panel-title" data-toggle="collapse" data-parent="#accordion" data-target="#collapse-{{id}}">
      <div class="screen-reorder-handle">
        <i class="fa fa-ellipsis-v"></i><i class="fa fa-ellipsis-v"></i>
      </div>
      <span class="fa fa-chevron-down"></span>
      <span class="panel-title-text">{{~title~}}</span>
    </h4>
    <a href="#"><span class="icon-delete fa fa-trash"></span></a>
  </div>
  <div id="collapse-{{id}}" class="panel-collapse collapse in">
    <div class="panel-body">
      <div class="form-horizontal">

        <div class="form-group">
          <div class="col-sm-4 control-label">
            <label for="list-item-title-{{id}}">Title</label>
          </div>
          <div class="col-sm-8">
            <input type="text" class="form-control list-item-title" id="list-item-title-{{id}}" name="list-item-title-{{id}}" placeholder="Enter title" value="{{~title~}}">
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-4 control-label">
            <label for="list-item-desc-{{id}}">Description</label>
          </div>
          <div class="col-sm-8">
            <textarea class="form-control list-item-desc" id="list-item-desc-{{id}}" name="list-item-desc-{{id}}" placeholder="Enter description" rows="2"></textarea>
          </div>
        </div>

        <div class="form-group clearfix">
          <div class="col-sm-4 control-label">
            <label for="list-item-size-{{id}}">Panel size</label>
          </div>
          <div class="col-sm-8">
            <label for="list-item-size-{{id}}" class="select-proxy-display">
              <select name="panelSize-{{id}}" id="list-item-size-{{id}}" data-label="select" class="hidden-select form-control panel-size">
                <option value="Small">Small</option>
                <option value="Medium">Medium</option>
                <option value="Large">Large</option>
              </select>
              <span class="icon fa fa-chevron-down"></span>
              <span class="select-value-proxy">{{#if size}}{{size}}{{else}}Small{{/if}}</span>
            </label>
          </div>
        </div>

        <div class="add-link"></div>

        <div class="form-group">
          <div class="col-sm-4 control-label">
            <label>Panel colour</label>
          </div>
          <div class="col-sm-8">
            <div class="input-group" colorpicker-component>
              <div class="input-group-addon"><i style="background-color:#00abd2"></i></div>
              <input type="text" id="list-item-color-{{id}}" class="form-control list-item-color" value="#00abd2">
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-12">
            <p class="help-block">Adding an image will override the chosen colour chosen. However if the image has transparency, the colour will be shown underneath.</p>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-4 control-label">
            <label for="list-item-image-mpsK94eK">Image</label>
          </div>
          <div class="col-sm-8">
            <div class="add-image-holder ">
              <div class="btn btn-default list-item-set-image add-image">Add Image</div>
              <div class="thumb-holder hidden">
                <div class="thumb-image"><img src="" /></div>
                <div class="btn btn-link text-danger image-remove">Remove Image</div>
              </div>
            </div>
            <div class="list-item-image"></div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
